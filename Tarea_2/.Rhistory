metodo_biseccion <- function(f_x, a,b,tol, N){
cond <-  1
it <- 0
A <- a
B <- b
p <- 0
while(cond==1){
it <- it+1
if(it<=N){#if 1
p[it] <- A[it]+(B[it]-A[it])/2
tol_it <- (B[it]-A[it])/2
if( f_x(p[it])==0 | tol_it<tol){#if 2
resultados <- list(aprox=p, precision=tol_it, iteraciones=it)
return(resultados)
cond <- 0
}# end if 2
else{ #else 2
if(f_x(A[it])*f_x(p[it])<0){# if 3
A[it+1] <- A[it]
B[it+1] <- p[it]
} # end if 3
else{# else 3
A[it+1] <- p[it]
B[it+1] <- B[it]
}# end else 3
} #end else 2
}#end if 1
else{ # else 1
print("Se alcanzó el máximo de iteraciones")
cond <- 0
} # end else 1
}# While
}#Función
